params {
    project_title        = "project"

    skip_qc              = false

    skip_trim            = false
    skip_trim_qc         = false
    r1_adapter           = "AGATCGGAAGAGCGTCGTGTAGGGAAAGAGTGT"
    r2_adapter           = "AGATCGGAAGAGCACACGTCTGAACTCCAGTCAC"
    minimum_length       = 30

    skip_kraken          = false
    retain_third_pos     = false
}

includeConfig "conf/containers.config"

profiles {
    slurm {
        // includeConfig "conf/slurm.config"
        workDir = "${SCRATCHDIR}/${params.project_title}/work/"

        executor {
            queueSize = 50
            submitRateLimit = '10/1min'
        }

        singularity {
            enabled = true
            cacheDir = "${HOME}/singularity/"
            autoMounts = true
        }

        process {
            publish_dir = "${SCRATCHDIR}/${params.project_title}/publish/"
            executor = 'slurm'
        }
        includeConfig "conf/reporting.config"
    }

    local {
        // create default for publish_dir if not input
        includeConfig "conf/local.config"
        workDir = "${params.publish_dir}/${params.project_title}/work/"

        singularity {
            enabled = true
            cacheDir = "${HOME}/singularity/"
            autoMounts = true
        }

        process {
            publish_dir = "${params.publish_dir}/${params.project_title}/publish/"
        }
        includeConfig "conf/reporting.config"
    }

}

